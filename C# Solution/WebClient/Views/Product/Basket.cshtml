@using ClassLibrary.Entity
@model IEnumerable<LineItem>

@{
    ViewData["Title"] = "Basket";
}

<h2>Basket</h2>

<p>
    <a asp-action="Purchase">Purchase</a>
</p>

<form asp-action="Purchase">
        <input type="submit" value="Purchase" class="btn btn-default" />
</form>
<table class="table">
    <thead>
        <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Product.Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Quantity)
                </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Product.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Quantity)
            </td>

            <td>
                <a asp-action="RemoveProductFromOrder" 
                   asp-route-id="@item.Product.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
