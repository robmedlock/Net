<Window x:Class="WinClient.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WinClient"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Window.Resources>
        <Style TargetType="Button">
            <Setter Property="HorizontalAlignment" Value="Left" />
            <Setter Property="Width" Value="100" />
            <Setter Property="Background" Value="{DynamicResource GreenBackground}"/>
        </Style>
        <SolidColorBrush x:Key="GreenBackground" Color="Green"/>
    </Window.Resources>

    <Grid>
        <TextBox x:Name="textBox" HorizontalAlignment="Left" Margin="25,23,0,0" Text="1000" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <Button Background="{DynamicResource ResourceKey=GreenBackground}" x:Name="button" Content="Start" HorizontalAlignment="Left" Margin="25,58,0,0" VerticalAlignment="Top"  />
        <Label x:Name="label" Content="Label" HorizontalAlignment="Left" Margin="25,102,0,0" VerticalAlignment="Top"/>
    </Grid>
</Window>
